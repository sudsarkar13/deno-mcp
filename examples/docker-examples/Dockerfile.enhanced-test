# Enhanced Deno MCP Server Test Docker Configuration
# This configuration provides comprehensive testing capabilities
FROM node:20-slim

# Install system dependencies including testing tools
RUN apt-get update && apt-get install -y \
    curl \
    unzip \
    bash \
    jq \
    netcat-openbsd \
    procps \
    htop \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Deno (glibc-compatible)
RUN curl -fsSL https://deno.land/x/install/install.sh | sh \
    && mv /root/.deno/bin/deno /usr/local/bin/deno \
    && chmod +x /usr/local/bin/deno

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json first for better caching
COPY package*.json ./
COPY tsconfig.json ./
COPY src/ ./src/

# Install dependencies
RUN npm ci --ignore-scripts

# Build the TypeScript project
RUN npm run build

# Copy test files
COPY test/ ./test/
COPY README.md LICENSE ./

# Create a non-root user for security
RUN groupadd -g 1001 denouser \
    && useradd -u 1001 -g denouser -m denouser \
    && chown -R denouser:denouser /app

# Create workspace and test directories
RUN mkdir -p /workspace /test-results && \
    chown denouser:denouser /workspace /test-results

# Copy enhanced test script
COPY examples/docker-examples/docker-test-runner.sh /usr/local/bin/test-runner.sh
RUN chmod +x /usr/local/bin/test-runner.sh

# Switch to non-root user
USER denouser

# Set environment variables
ENV DENO_DIR=/home/denouser/.deno
ENV PATH=/usr/local/bin:/usr/bin:/bin
ENV NODE_ENV=test

# Set default working directory
WORKDIR /workspace


# Default command runs the comprehensive test suite
CMD ["/usr/local/bin/test-runner.sh"]
